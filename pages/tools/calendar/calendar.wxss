page {
  background: #fff;
  height: 100vh;
  overflow-y: hidden;
}
.head {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  width: 100%;
  justify-content: center;
  background: #fff;
}
.head view {
  display: inline-block;
  margin-right: 20rpx;
}
.head view:last-child {
  margin-right: 0;
  float: right;
}
image {
  padding: 10px;
  height: 20px;
  width: 20px;
}
.now_month {
  position: relative;
  text-align: center;
  line-height: 40px;
  z-index: -1;
}
.calendar-content {
  background: #fff;
  width: 100%;
  padding: 0 10rpx;
}
.column-list {
  color: #333;
  width: 100%;
  height: 60rpx;
  display: flex;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 700;
}
.week {
  width: 14%;
}
.weekly {
  width: calc(86% / 7);
}
.week-list {
  position: relative;
  float: left;
  width: 14%;
  text-align: center;
  line-height: 30px;
}
.week-item {
  font-size: 26rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-weight: 500;
}
.date-list {
  position: relative;
  float: left;
  width: 86%;
  display: block;
  text-align: center;
  line-height: 30px;
}
.date-item {
  position: relative;
  width: calc(100% / 7);
  height: 120rpx;
  padding: 8rpx 0;
  float: left;
}

.spot-list {
  height: 20rpx;
  bottom: 4rpx;
}
.spot-item {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin: 0 4rpx;
}
.spot:not(:first-child) {
  margin-left: 2px;
}

.event-list {
  position: relative;
  width: 100%;
  padding: 30rpx 30rpx 80rpx;
  z-index: 0;
}

.event-item {
  display: flex;
  margin-bottom: 30rpx;
}

.event-item .event-date {
  padding-top: 6rpx;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin-right: 50rpx;
  text-align: center;
}

.event-date .date-day {
  font-size: 30rpx;
  color: #999;
  font-weight: 700;
}

.event-date .date-month {
  font-size: 18rpx;
  color: #999;
  font-weight: 700;
  margin-top: -4rpx;
}

.event-date__item {
  line-height: 32rpx;
  position: relative;
}

.event-date .split-line {
  width: 2rpx;
  height: 16rpx;
  background-color: #e1e1e1;
}

.event-item .event-content {
  position: relative;
  width: 100%;
  padding: 24rpx 30rpx;
  border-radius: 18rpx;
  transition: all ease-in .2s;
}

.event-item:not(:last-child) .event-content::before {
  content: '';
  width: 2rpx;
  height: calc(100% + 4rpx);
  background-color: #f4f4f4;
  position: absolute;
  top: 30rpx;
  left: -36rpx;
}

.event-item .event-content::after {
  content: '';
  width: 16rpx;
  height: 16rpx;
  background-color: inherit;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  left: -42rpx;
}

.icon-back,
.icon-right {
  border-radius: 100%;
  padding: 16rpx;
}
.this-day .day-item__num {
  color: var(--theme);
  font-weight: bold;
}
.option {
  color: #fff;
  background: var(--theme);
  border-radius: 50%;
  padding: 14rpx;
  text-align: right;
  line-height: 50px;
}
.option:nth-child(1) {
  margin-right: 30rpx;
}
.clearfloat {
  clear: both;
}
.ad {
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;
}

.now-month {
  font-size: 42rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.now-year {
  font-size: 30rpx;
  color: #666;
  font-size: 400;
}

.day-item__num {
  color: #333;
  font-size: 30rpx;
  height: 40rpx;
  top: 10rpx;
}

.not-this-month {
  color: #ccc;
}

.day-item__ext {
  color: #ccc;
  font-size: 20rpx;
  height: 30rpx;
  top: 50rpx;
}

.day-list {
  margin-top: 16rpx;
}

.select-term {
  color: #666;
}

.select-term .icon-triangledownfill {
  color: #999;
}

.event-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.event-desc {
  font-size: 26rpx;
  font-weight: 400;
}

.selected-event .day-item__ext {
  color: #666;
}

.selected-event.mid {
  border-radius: 0;
}

.selected-event.start {
  border-top-left-radius: 18rpx;
  border-bottom-left-radius: 18rpx;
}

.selected-event.end {
  border-top-right-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
}

.selected-event.onlyone {
  border-radius: 18rpx;
}

.date-content {
  width: 100%;
  height: 100%;
  position: relative;
}

.date-content > view {
  position: absolute;
  width: 100%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-event .date-day {
  color: #333;
}

.select-event .date-month {
  color: #666;
}

.fixed {
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 1;
}