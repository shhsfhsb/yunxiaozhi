@import 'index.skeleton.wxss';

page {
  position: relative;
  width: 100%;
  background-color: #fff;
}

.bg {
  z-index: 1;
}

.container {
  padding: 0 30rpx;
}

.box {
  width: 100%;
  background: #fff;
  padding: 0 30rpx;
}

.banners {
  overflow: hidden;
}

.screen-swiper {
  height: 240rpx !important;
  min-height: 240rpx;
}

.cu-bar .action:first-child {
  margin: 0;
}

.cu-bar .action:last-child {
  margin: 0;
}

.cu-list.menu>.cu-item {
  padding: 0;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx auto;
  display: flex;
  justify-content: center;
}

.title {
  display: block;
  text-align: center;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-bottom: 10rpx;
}

.swiper-box {
  display: block;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.dots {
  height: 16rpx;
  width: 44rpx;
  margin: 14rpx auto;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #aaa;
  border-radius: 16rpx;
  float: left;
}

.on {
  background: #6ed4e6;
}

.dot:first-child {
  margin-right: 12rpx;
}

.page-content {
  width: 100%;
  padding-top: 20rpx;
}

.message {
  margin-bottom: 20rpx;
}

.message_content {
  height: 100rpx;
  background: #fff;
  padding: 0 20rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course_list {
  width: 100%;
}

.course_li {
  height: 90rpx;
  margin: 14rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.course_li:last-child {
  border-bottom: 0;
}

.jieci {
  border-left: 2px solid #6ed4e6;
  float: left;
  margin-right: 20rpx;
  padding-left: 20rpx;
  line-height: 80rpx;
  font-size: 50rpx;
  color: #6ed4e6;
}

.course_name {
  float: left;
  width: 40%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}

.course_address {
  width: 30%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: right;
  float: right;
  padding-right: 10px
}

.week {
  font-size: 30rpx;
  float: right;
  color: #ccc;
}

.header {
  background: #fff;
  padding: 20rpx 0;
  height: 90rpx;
  width: 100%;
  font-size: 36rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #f3f3f3;
}

.header_title {
  float: left;
  padding: 0 20rpx;
}

.news {
  width: 100%;
}

.news_list {
  padding-left: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.news_li {
  width: 100%;
  border-bottom: 1px solid #eee;
}

.news_title {
  font-size: 30rpx;
  line-height: 42rpx;
  float: left;
  padding: 14rpx 20rpx 14rpx 0;
}

.news_date {
  font-size: 20rpx;
  padding-bottom: 14rpx;
  clear: left;
  color: #aaa;
}

.loading {
  width: 32rpx;
  height: 32rpx;
  margin: 0 20rpx;
}

.more {
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 10rpx 10rpx 10rpx 20rpx;
}

.unlogin {
  text-align: center;
  padding: 40rpx 30rpx;
}

.banner {
  height: 200rpx;
}

.banner swiper-item image {
  width: 100%;
  height: 100%;
}

.exam {
  height: 80rpx;
  padding: 8rpx 20rpx;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  margin-top: 10rpx;
}

.name {
  margin: 8rpx 0;
  font-size: 36rpx;
  float: left;
}

.diff {
  margin: 8rpx 20rpx;
  float: right;
  color: #333;
}

.days {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--theme);
  padding: 0 10rpx;
}

.like {
  padding: 10rpx 20rpx;
}

.soul {
  line-height: 1.5;
  letter-spacing: 2rpx;
}

.tools.cu-list.grid.no-border {
  padding: 20rpx 10rpx 10rpx;
}

.news-img {
  box-sizing: border-box;
}

.news-img image {
  width: 897rpx;
  height: 383rpx;
  border-radius: 12rpx;
}

.new-student-tips {
  width: 600rpx;
  background: transparent;
}

.new-student-tips .bg-img {
  border-radius: 8rpx;
}

.float-image {
  position: fixed;
  bottom: 80rpx;
  right: 20rpx;
  width: 140rpx;
  height: 140rpx;
}

.float-image image {
  width: 100%;
}

.float-image .icon-close {
  border-radius: 50%;
  background: rgba(0, 0, 0, .5);
  padding: 2rpx;
  color: #fff;
}

.add_tips {
  position: absolute;
  right: 10px;
  padding: 4px 10px;
  background: var(--theme);
  color: #fff;
  border-radius: 4px;
  z-index: 9999;
}

.add_tips .icon-close {
  padding: 10px 2px;
}

.add_tips::before {
  content: " ";
  position: absolute;
  top: -22px;
  right: 50px;
  border-width: 14px;
  border-style: solid;
  border-color: transparent var(--theme) transparent transparent;
  transform: rotate(90deg);
}

.component-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}

.component-item {
  width: 48%;
  height: 240rpx;
  background-color: var(--yellow);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
}

.course-item {
  display: flex;
  align-items: center;
}

.course-item__section {
  width: 60rpx;
  flex: none;
}

.course-item__name {
  margin-left: 10rpx;
  flex: 1;
}

.course-address {
  margin-left: 10rpx;
  color: #666;
  justify-self: flex-end;
  max-width: 240rpx;
}