<cu-custom bgColor="bg-white" isBack="true">
  <view slot="back">返回</view>
	<view slot="content">
    舔狗日记
  </view>
</cu-custom>
<view class="container">
  <view class="box-side" style="height:{{winHeight * 0.78}}px">
    <view class="box">
      <text><text wx:for="{{arr}}" wx:key="key" class="{{index%2==1?'mark':''}}">{{item}}</text></text>
