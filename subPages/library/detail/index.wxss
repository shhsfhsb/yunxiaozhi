page {
  position: relative;
}

.bg {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: -1;
}

.bg image {
  width: 100%;
  height: 100%;
  filter: blur(100rpx) opacity(45%);
}

.base-info {
  position: relative;
  width: 100%;
}

.base-info .info {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.base-info .info .img {
  width: 177rpx;
  height: 250rpx;
  flex: none;
}

.base-info .info .img image {
  width: 100%;
  height: 100%;
}

.base-info .info .content {
  margin-left: 20rpx;
  color: #333;
  font-size: 30rpx;
}

.content .collect {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.base-info .info .title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--theme);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.base-info .info .content>view {
  margin-bottom: 10rpx;
}

.content-list {
  padding: 20rpx;
}

.section {
  border-radius: 12rpx;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section .title {
  position: relative;
  font-size: 30rpx;
  font-weight: 700;
  padding: 0 10rpx 0 20rpx;
  margin-bottom: 20rpx;
}

.section .title::before {
  content: '';
  position: absolute;
  top: 20%;
  left: 0;
  width: 10rpx;
  height: 60%;
  border-radius: 8rpx;
  background-color: var(--theme);
}

.yxz-cel {
  padding: 0;
}

.yxz-cel .tr {
  padding: 0 16rpx;
}

.empty {
  padding: 20rpx 0;
  color: var(--gray);
}

.book-list {
  white-space: nowrap;
}

.book-list .book-item {
  width: 177rpx;
  display: inline-flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.book-list .book-item .book-item-img {
  width: 177rpx;
  height: 250rpx;
  margin-bottom: 10rpx;
}

.book-item .book-item-title {
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}