.cu-bar .search-form {
  height: 78rpx;
  font-size: 28rpx;
}

.section-list {
  padding: 20rpx;
}

.section {
  border-radius: 12rpx;
  background-color: #fff;
  padding: 30rpx 20rpx 20rpx;
  margin-bottom: 20rpx;
}

.section .title {
  position: relative;
  font-size: 30rpx;
  font-weight: 700;
  padding: 0 10rpx 0 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
}

.section .title .action {
  font-weight: normal;
  color: var(--theme);
  font-size: 28rpx;
}

.section .title::before {
  content: '';
  position: absolute;
  top: 20%;
  left: 0;
  width: 10rpx;
  height: 60%;
  border-radius: 8rpx;
  background-color: var(--theme);
}

.book-list {
  white-space: nowrap;
}

.book-list .book-item {
  width: 177rpx;
  display: inline-flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.book-list .book-item .book-item-img {
  width: 177rpx;
  height: 250rpx;
  margin-bottom: 10rpx;
}

.book-item .book-item-title {
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.no-login {
  text-align: center;
  padding: 30rpx 0;
}